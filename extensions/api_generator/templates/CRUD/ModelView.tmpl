from osis.store.OsisDB import OsisDB

def main(q, i, params, tags):
    rootobject = '$rootobject'
    domain = "$domain"
    appname = params['appname']
    view_name = '%s_view_%s_list' % (domain, rootobject)
    connection = OsisDB().getConnection(appname)
    if not connection.viewExists(domain, rootobject, view_name):
        view = connection.viewCreate(domain, rootobject, view_name)
#for $field in $fields
    #if $field["type"]!= "Dict" and $field["type"] != "List"
        view.setCol('$field["name"]', q.enumerators.OsisType.$field["Osistype"], True)
    #end if
#end for
        connection.viewAdd(view)
        indexes =list()
         
#for $field in $fields
    #if $field["type"]!= "Dict" and $field["type"] != "List"
        indexes.append('$field["name"]')
    #end if
#end for
        for field in indexes:
            context = {'schema': "%s_%s" % (domain, rootobject), 'view': view_name, 'field': field}
            connection.runQuery("CREATE INDEX %(field)s_%(schema)s_%(view)s ON %(schema)s.%(view)s (%(field)s)" % context)
        
        
        
        
     
